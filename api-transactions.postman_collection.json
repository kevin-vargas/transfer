{
  "info": {
    "name": "API Transactions",
    "description": "Collection for testing transaction endpoints in the Dale API service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://api.lvh.me",
      "type": "string"
    },
    {
      "key": "authUrl",
      "value": "http://auth.lvh.me",
      "type": "string"
    },
    {
      "key": "clientId",
      "value": "foo",
      "type": "string"
    },
    {
      "key": "clientSecret",
      "value": "bar",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "user1Id",
      "value": "",
      "type": "string"
    },
    {
      "key": "user2Id", 
      "value": "",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', responseJson.access_token);",
                  "    console.log('Access Token obtained:', responseJson.access_token);",
                  "    console.log('Token expires in:', responseJson.expires_in, 'seconds');",
                  "} else {",
                  "    console.log('Failed to get access token:', pm.response.text());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "client_credentials",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{clientId}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{clientSecret}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{authUrl}}/oauth2/token",
              "host": ["{{authUrl}}"],
              "path": ["oauth2", "token"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User 1 (Alice)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('user1Id', responseJson.id);",
                  "    console.log('User 1 ID:', responseJson.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice@example.com\",\n  \"initialBalance\": 100000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Create User 2 (Bob)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('user2Id', responseJson.id);",
                  "    console.log('User 2 ID:', responseJson.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bob Smith\",\n  \"email\": \"bob@example.com\",\n  \"initialBalance\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get User 1",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{user1Id}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{user1Id}}"]
            }
          }
        },
        {
          "name": "Get User 2",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{user2Id}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{user2Id}}"]
            }
          }
        },
        {
          "name": "Get User 1 Risk Assessment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{user1Id}}/risk",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{user1Id}}", "risk"]
            }
          }
        },
        {
          "name": "Get User 2 Risk Assessment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{user2Id}}/risk",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{user2Id}}", "risk"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions", 
      "item": [
        {
          "name": "Create Transaction (Alice → Bob)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('transactionId', responseJson.id);",
                  "    console.log('Transaction ID:', responseJson.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originUserId\": \"{{user1Id}}\",\n  \"destinationUserId\": \"{{user2Id}}\",\n  \"amount\": 250\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        },
        {
          "name": "Get User 1 Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions?userId={{user1Id}}",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{user1Id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get User 2 Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions?userId={{user2Id}}",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{user2Id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Test Duplicate Transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 400) {",
                  "    console.log('Duplicate transaction correctly prevented:', pm.response.json().message);",
                  "} else {",
                  "    console.log('Unexpected response for duplicate transaction test');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originUserId\": \"{{user1Id}}\",\n  \"destinationUserId\": \"{{user2Id}}\",\n  \"amount\": 250\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        },
        {
          "name": "Create Pending Transaction (Amount > 50000)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('transactionId', responseJson.id);",
                  "    console.log('Pending Transaction ID:', responseJson.id);",
                  "    console.log('Transaction State:', responseJson.state);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originUserId\": \"{{user1Id}}\",\n  \"destinationUserId\": \"{{user2Id}}\",\n  \"amount\": 75000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        },
        {
          "name": "Approve Transaction",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions/{{transactionId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "{{transactionId}}", "approve"]
            }
          }
        },
        {
          "name": "Create Another Transaction (Bob → Alice)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('transactionId', responseJson.id);",
                  "    console.log('Transaction ID:', responseJson.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originUserId\": \"{{user2Id}}\",\n  \"destinationUserId\": \"{{user1Id}}\",\n  \"amount\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        },
        {
          "name": "Reject Transaction",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions/{{transactionId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "{{transactionId}}", "reject"]
            }
          }
        }
      ]
    }
  ]
}