    real_ip_recursive on;

{{end}}    location / {
{{if .Allowlist}}{{range .Allowlist}}        allow {{.}};
{{end}}        deny all;

{{end}}        proxy_pass http://{{.Name}}:{{.Port}};
        proxy_http_version 1.1;
