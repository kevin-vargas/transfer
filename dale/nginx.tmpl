    }
}

{{end}}
# Health check endpoint
server {
    listen 80;
    server_name {{.Domain}};
    
    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
    
    location / {
        return 301 http://{{.FirstProject}}.{{.Domain}}$request_uri;
    }
}